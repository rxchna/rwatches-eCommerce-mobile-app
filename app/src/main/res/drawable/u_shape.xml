<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer (transparent) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- U-shape effect -->
    <item android:bottom="16dp"> <!-- Adjust bottom to control the height of the U-shape -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Color of the U shape -->
            <corners android:radius="16dp" /> <!-- Rounded corners for the U shape -->
        </shape>
    </item>
</layer-list>
